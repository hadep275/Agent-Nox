{
  "name": "nox-vscode",
  "displayName": "Nox - AI Coding Fox",
  "description": "ü¶ä Your clever AI coding companion for enterprise-scale development",
  "version": "0.1.0",
  "publisher": "nox-ai",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hadep275/Agent-Nox"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "AI",
    "Programming Languages",
    "Machine Learning",
    "Other"
  ],
  "keywords": [
    "ai",
    "assistant",
    "coding",
    "enterprise",
    "nox",
    "fox",
    "claude",
    "gpt",
    "deepseek",
    "productivity"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "nox.chat",
        "title": "ü¶ä Nox: Start Chat",
        "icon": "$(comment-discussion)"
      },
      {
        "command": "nox.openChatPanel",
        "title": "ü¶ä Nox: Open Chat Panel",
        "icon": "$(comment-discussion)"
      },
      {
        "command": "nox.explain",
        "title": "ü¶ä Nox: Explain Code",
        "icon": "$(info)"
      },
      {
        "command": "nox.refactor",
        "title": "ü¶ä Nox: Refactor Code",
        "icon": "$(tools)"
      },
      {
        "command": "nox.analyze",
        "title": "ü¶ä Nox: Analyze Codebase",
        "icon": "$(search)"
      },
      {
        "command": "nox.dashboard",
        "title": "ü¶ä Nox: Performance Dashboard",
        "icon": "$(dashboard)"
      },
      {
        "command": "nox.settings",
        "title": "ü¶ä Nox: Settings",
        "icon": "$(settings-gear)"
      },
      {
        "command": "nox.apiKeys",
        "title": "üîë Nox: Manage API Keys",
        "icon": "$(key)"
      },
      {
        "command": "nox.clearChat",
        "title": "Clear Chat History",
        "icon": "$(trash)"
      },
      {
        "command": "nox.chatSettings",
        "title": "Chat Settings",
        "icon": "$(gear)"
      },
      {
        "command": "nox.manageApiKeys",
        "title": "üîë Manage API Keys"
      },
      {
        "command": "nox.switchProvider",
        "title": "ü§ñ Switch AI Provider"
      },
      {
        "command": "nox.openExtensionSettings",
        "title": "‚öôÔ∏è Extension Settings"
      },
      {
        "command": "nox.showThemeSettings",
        "title": "üé® Theme Settings"
      },
      {
        "command": "nox.showDebugLogs",
        "title": "üîç Debug & Logs"
      },
      {
        "command": "nox.showHelp",
        "title": "üìñ Help & Documentation"
      },
      {
        "command": "nox.resetExtension",
        "title": "üîÑ Reset Extension"
      },
      {
        "command": "nox.openSettingsPanel",
        "title": "Settings",
        "icon": "$(gear)"
      }
    ],
    "submenus": [
      {
        "id": "nox.settingsSubmenu",
        "label": "Nox Settings",
        "icon": "$(gear)"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "nox.explain",
          "when": "editorHasSelection",
          "group": "nox@1"
        },
        {
          "command": "nox.refactor",
          "when": "editorHasSelection",
          "group": "nox@2"
        }
      ],
      "explorer/context": [
        {
          "command": "nox.analyze",
          "when": "explorerResourceIsFolder",
          "group": "nox@1"
        }
      ],
      "view/title": [
        {
          "command": "nox.openSettingsPanel",
          "when": "view == noxChat",
          "group": "navigation@1"
        },
        {
          "command": "nox.clearChat",
          "when": "view == noxChat",
          "group": "navigation@2"
        }
      ],
      "nox.settingsSubmenu": [
        {
          "command": "nox.openSettingsPanel",
          "group": "1_main@1"
        },
        {
          "command": "nox.manageApiKeys",
          "group": "2_keys@1"
        },
        {
          "command": "nox.switchProvider",
          "group": "2_keys@2"
        },
        {
          "command": "nox.showHelp",
          "group": "3_help@1"
        },
        {
          "command": "nox.resetExtension",
          "group": "4_reset@1"
        }
      ],
      "commandPalette": [
        {
          "command": "nox.chat"
        },
        {
          "command": "nox.explain",
          "when": "editorHasSelection"
        },
        {
          "command": "nox.refactor",
          "when": "editorHasSelection"
        },
        {
          "command": "nox.analyze"
        },
        {
          "command": "nox.dashboard"
        },
        {
          "command": "nox.settings"
        }
      ]
    },
    "views": {
      "nox": [
        {
          "id": "noxChat",
          "name": "",
          "type": "webview",
          "when": "nox.activated"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "nox",
          "title": "ü¶äNox",
          "icon": "$(robot)"
        }
      ]
    },
    "configuration": {
      "title": "ü¶ä Nox",
      "properties": {
        "nox.aiProvider": {
          "type": "string",
          "default": "anthropic",
          "enum": [
            "anthropic",
            "openai",
            "deepseek",
            "local"
          ],
          "description": "ü¶ä Primary AI provider for Nox"
        },
        "nox.anthropic.apiKey": {
          "type": "string",
          "default": "",
          "description": "üîë Your Anthropic API key (stored securely)"
        },
        "nox.openai.apiKey": {
          "type": "string",
          "default": "",
          "description": "üîë Your OpenAI API key (stored securely)"
        },
        "nox.deepseek.apiKey": {
          "type": "string",
          "default": "",
          "description": "üîë Your DeepSeek API key (stored securely)"
        },
        "nox.enableTelemetry": {
          "type": "boolean",
          "default": true,
          "description": "üìä Enable usage analytics and performance telemetry"
        },
        "nox.maxContextSize": {
          "type": "number",
          "default": 100000,
          "description": "üìè Maximum context size for AI requests"
        },
        "nox.enableCaching": {
          "type": "boolean",
          "default": true,
          "description": "‚ö° Enable intelligent caching for performance"
        },
        "nox.logLevel": {
          "type": "string",
          "default": "info",
          "enum": [
            "debug",
            "info",
            "warn",
            "error"
          ],
          "description": "üìù Logging level for Nox"
        }
      }
    }
  },
  "scripts": {
    "build": "webpack --mode production",
    "build:dev": "webpack --mode development",
    "watch": "webpack --mode development --watch",
    "clean": "rimraf out",
    "compile": "npm run build",
    "test": "node ./test/runTest.js",
    "lint": "eslint .",
    "package": "npm run build && npx @vscode/vsce package",
    "publish": "npm run build && npx @vscode/vsce publish"
  },
  "devDependencies": {
    "@types/dompurify": "^3.0.5",
    "@types/marked": "^5.0.2",
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.80.0",
    "@vscode/vsce": "^2.22.0",
    "css-loader": "^6.11.0",
    "eslint": "^8.0.0",
    "rimraf": "^6.0.1",
    "style-loader": "^3.3.4",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "webpack": "^5.102.1",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "chroma-js": "^2.4.2",
    "dompurify": "^3.3.0",
    "highlight.js": "^11.11.1",
    "marked": "^9.1.6",
    "uuid": "^9.0.0"
  }
}
